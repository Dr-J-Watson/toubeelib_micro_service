    colors="true"                     
    verbose="true"                    
    beStrictAboutTestsThatDoNotTestAnything="true"
    beStrictAboutOutputDuringTests="true"
    stopOnFailure="false"             
    testdox="true">                   <!-- Active le mode TestDox pour une sortie plus lisible -->

    <!-- DÃ©finition des suites de tests -->
    <testsuites>
        <testsuite name="Application Test Suite">
            <directory>tests</directory>  <!-- Dossier contenant les tests -->
        </testsuite>
    </testsuites>

</phpunit>
